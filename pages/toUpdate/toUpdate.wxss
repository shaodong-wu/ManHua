.update-list {
  width: 100vw;
  height: 100vh;
  margin: 0 auto;
  box-sizing: border-box;
}

.update-list .head {
  z-index: 999;
  display: block;
  position: sticky;
  top: 0rpx;
  color: #767676;
  width: 100%;
  height: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 50rpx;
  padding-left: 15rpx;
  background-color: #f6f6f6;
}

.side-wrapper {
  z-index: 999;
  position: fixed;
  top: 35%;
  right: 0;
  padding: 0rpx 10rpx;
  border-radius: 25rpx 0rpx 0rpx 20rpx;
  background-color: rgba(0, 0, 0, 0.56);
}

.side-wrapper .item-nav {
  color: #d7d6d4;
  font-size: 28rpx;
  font-weight: 500;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx rgba(255, 255, 255, 0.2) solid;
}

.side-wrapper .item-nav.active {
  color: #fc6976;
}

@import '/templates/wait/index.wxss';